<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:loading="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kabarohei.loadingdemo.MainActivity">
<com.example.kabarohei.loadingdemo.view.LoadingCircle
    android:layout_width="200dp"
    android:layout_height="200dp"
    loading:inner_circle_speed="3"
    loading:inner_color="@android:color/holo_blue_bright"
    loading:inner_rotating_speed="5"
    loading:inner_width="5dip"
    loading:mode="circle"
    loading:outer_color="@color/colorAccent"
    loading:outer_width="5dip"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:padding="10dip"  />
    <com.example.kabarohei.loadingdemo.view.LoadingCircle
        android:layout_width="50dp"
        android:layout_height="50dp"
        loading:inner_circle_speed="3"
        loading:inner_color="@android:color/holo_blue_bright"
        loading:inner_rotating_speed="5"
        loading:inner_width="5dip"
        loading:mode="arc"
        loading:outer_color="@color/colorAccent"
        loading:outer_width="5dip"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:padding="10dip"  />
    <!-- android:padding="10dip" 一定要设置,要不然外环显示有问题,会出现部分遮挡-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        />
</LinearLayout>
